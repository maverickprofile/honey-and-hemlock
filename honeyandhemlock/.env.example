# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
# Supabase project URL
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anon/public key (safe to expose in frontend)
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (server-side only, keep secret)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==========================================
# STRIPE CONFIGURATION
# ==========================================
# Stripe publishable key (safe to expose in frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe secret key (server-side only, keep secret)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe webhook endpoint secret (for webhook signature verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
# Application environment (development, staging, production)
NODE_ENV=development

# Application base URL
VITE_APP_URL=http://localhost:5173

# API base URL (if different from app URL)
VITE_API_URL=http://localhost:5173

# ==========================================
# EMAIL CONFIGURATION (if using email services)
# ==========================================
# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_app_password_here

# Email addresses
CONTACT_EMAIL=contact@honeyandhemlock.com
ADMIN_EMAIL=admin@honeyandhemlock.com

# ==========================================
# THIRD-PARTY INTEGRATIONS
# ==========================================
# The Field organization integration
THE_FIELD_PROFILE_URL=https://app.thefield.org/profile/Honey---Hemlock-Productions/629629

# Social media URLs (for easy configuration)
FACEBOOK_URL=https://www.facebook.com/profile.php?id=100085916835325
TIKTOK_URL=https://www.tiktok.com/@honeyandhemlock.prod
INSTAGRAM_URL=https://www.instagram.com/honeyandhemlock_productions/
LINKEDIN_URL=https://www.linkedin.com/company/honey-hemlock-productions/
IMDB_URL=https://pro.imdb.com/company/co0912607?r=cons_ats_co_pro&ref=cons_ats_co_pro

# ==========================================
# SECURITY
# ==========================================
# JWT secret for session management (if using custom auth)
JWT_SECRET=your_super_secret_jwt_key_here

# Password hashing salt rounds
BCRYPT_SALT_ROUNDS=12

# ==========================================
# MONITORING & ANALYTICS
# ==========================================
# Google Analytics tracking ID (if using GA)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (if using Sentry)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# FILE STORAGE
# ==========================================
# Maximum file upload size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# Allowed file types for script uploads
ALLOWED_FILE_TYPES=.pdf,.doc,.docx

# ==========================================
# PAYMENT SETTINGS
# ==========================================
# Default currency
DEFAULT_CURRENCY=USD

# Tax rate percentage
TAX_RATE=0.0

# Processing fee percentage
PROCESSING_FEE=2.9

# Additional page fee for scripts over 90-120 pages
ADDITIONAL_PAGE_FEE=5.00

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Mock payments in development
MOCK_PAYMENTS=false